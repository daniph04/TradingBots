# ===== Exchange Config =====
EXCHANGE=bybit
TESTNET=true
API_KEY=YOUR_TESTNET_KEY
API_SECRET=YOUR_TESTNET_SECRET

# ===== Symbols & Timeframe =====
# Multiple symbols separated by commas
SYMBOLS=BTC/USDT,ETH/USDT
TIMEFRAME=1h
CANDLES_LIMIT=300

# ===== Indicators =====
SMA_FAST=10
SMA_SLOW=30
USE_RSI=true
RSI_LENGTH=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30

# ===== Risk Management (spot demo) =====
ACCOUNT_CURRENCY=USDT
RISK_PCT_PER_TRADE=0.02      # risk 2% of balance per trade
MAX_NOTIONAL_USD=300         # max size per trade
MIN_NOTIONAL_USD=25          # skip trades smaller than this

# ===== Runtime =====
POLL_SECONDS=60
DRY_RUN=true                 # set to false to enable real trading

# ===== Telegram (optional) =====
TELEGRAM_TOKEN=
TELEGRAM_CHAT=
